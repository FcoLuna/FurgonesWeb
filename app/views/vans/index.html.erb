<p id="notice"><%= notice %></p>

<h1>Listing Vans</h1>
<div class="panel panel-default">
<table class="table">
  <thead>
    <tr>
      <th>Patente</th>
      <th>Capacidad</th>
      <th>Estado</th>
      <th>Kilimetrage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vans.each do |van| %>
      <tr>
        <td><%= van.patente %></td>
        <td><%= van.capacidad %></td>
        <td><%= van.estado %></td>
        <td><%= van.kilimetrage %></td>
        <td><%= link_to 'Mostrar', van %></td>
        <td><%= link_to 'Editar', edit_van_path(van) %></td>
        <td><%= link_to 'Elominar', van, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

