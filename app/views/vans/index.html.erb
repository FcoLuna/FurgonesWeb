  <%=render "partials/navigation"%>
<p id="notice"><%= notice %></p>

<h1>Lista de Furgones</h1>
<%if user_signed_in?%>
<div class="panel panel-primary">
<table class="table">
  <thead>
    <tr>
      <th>Patente</th>
      <th>Capacidad</th>
      <th>Estado</th>
      <th>Kilometraje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vans.each do |van| %>
      <tr>
        <td><%= van.patente %></td>
        <td><%= van.capacidad %></td>
        <td><%= van.estado %></td>
        <td><%= van.kilimetrage %></td>
        <td><%= link_to 'Mostrar', van %></td>
        <td><%= link_to 'Editar', edit_van_path(van) %></td>
        <td><%= link_to 'Eliminar', van, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'Nuevo Furgon', new_van_path %>
<%= link_to 'Atrás','welcome/index'%>
<%else%>
<div class="panel panel-primary">
<table class="table">
  <thead>
    <tr>
      <th>Patente</th>
    </tr>
  </thead>

  <tbody>
    <% @vans.each do |van| %>
      <tr>
        <td><%= van.patente %></td>
          </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'Atrás','welcome/index'%>
<%end%>
