<%= form_for(@van) do |f| %>
  <% if @van.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@van.errors.count, "error") %> prohibited this van from being saved:</h2>

      <ul>
      <% @van.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :patente %><br>
    <%= f.text_field :patente %>
  </div>
  <div class="field">
    <%= f.label :capacidad %><br>
    <%= f.number_field :capacidad %>
  </div>
  <div class="control-group">
    <%= f.label "estado", class: 'control-label' %>
    <div class="controls">
      <%= f.select(:estado, options_for_select([['Exelente', 'Exelente'], ['Bueno', 'Bueno'],['Regular', 'Regular'],['Malo','Malo'], ['Pesimo', 'Pesimo']]), { prompt: 'Seleccione Estado del Vehiculo' }) %>
</div>
<div class="field">
  <%= f.label :kilimetrage, "Kilometrage" %><br>
  <%= f.number_field :kilimetrage %>
</div>
  <div class="actions">
    <%= f.submit 'Guardar',class:"btn btn-success btn-sm  btn-lg active"%>
  </div>
<% end %>
