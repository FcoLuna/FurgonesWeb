<%=render "partials/navigation"%>
<%if user_signed_in?%>
<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
<p>
  <strong>Nombre:</strong>
  <%= @school.nombre %>
</p>

<p>
  <strong>Telefono:</strong>
  <%= @school.telefono %>
</p>

<p>
  <strong>Direccion:</strong>
  <%= @school.direccion %>
</p>

<p>
  <strong>Comuna:</strong>
  <%= @school.comuna %>
</p>
<p>
<%= link_to 'Editar', edit_school_path(@school),class:"btn btn-info btn-sm  btn-lg active" %>
<%= link_to 'Atrás', schools_path,class:"btn btn-info btn-lg active btn-sm " %>
</p>
<p>
    <strong>Alumnos que asisten a este Colegio: </strong>
</p>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Jornada</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% Student.all.each do |student| %>
        <tr>
          <%if @school.id==student.school_id%>
          <td><%= student.nombre %></td>
          <td><%= student.apellido %></td>
          <td><%= student.jornada %></td>
          <td><%= link_to 'Mostrar', student,class:"btn btn-primary btn-lg active btn-sm "  %></td>
          <td><%= link_to 'Editar', edit_student_path(student), class:"btn btn-warning btn-lg active btn-sm " %></td>
          <td><%= link_to 'Eliminar', student, method: :delete, data: { confirm: '¿Está seguro?' },class:"btn btn-danger btn-lg active btn-sm " %></td>
           <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<%else%>
<p>
  <strong>Para acceder a esta información debe iniciar seción</strong>
</p>

  <%= link_to 'Atrás', schools_path,class:"btn btn-default btn-lg active btn-sm " %>
  <%end%>
