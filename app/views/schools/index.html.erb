<p id="notice"><%= notice %></p>

<h1>Lista de Colegios</h1>
<div class="panel panel-default">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Comuna</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.nombre %></td>
        <td><%= school.telefono %></td>
        <td><%= school.direccion %></td>
        <td><%= school.comuna %></td>
        <td><%= link_to 'Mostrar', school %></td>
        <td><%= link_to 'Editar', edit_school_path(school) %></td>
        <td><%= link_to 'Eliminar', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Colegio', new_school_path %>
