<p id="notice"><%= notice %></p>
<h1>Lista de Colegios</h1>
  <%if user_signed_in?%>
<div class="panel panel-primary">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Comuna</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.nombre %></td>
        <td><%= school.telefono %></td>
        <td><%= school.direccion %></td>
        <td><%= school.comuna %></td>
        <td><%= link_to 'Mostrar', school,class:"btn btn-primary btn-lg active btn-sm " %></td>
        <td><%= link_to 'Editar', edit_school_path(school), class:"btn btn-warning btn-lg active btn-sm " %></td>
        <td><%= link_to 'Eliminar', school, method: :delete, data: { confirm: '¿Está Seguro?' },class:"btn btn-danger btn-lg active btn-sm " %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @schools, renderer: BootstrapPagination::Rails %>
</div>

<%= link_to 'Nuevo Colegio', new_school_path,class:"btn btn-default btn-lg active btn-sm"  %>
<%= link_to 'Atrás','welcome/index',class:"btn btn-default btn-lg active btn-sm" %>
<%else%>
<div class="panel panel-primary">
