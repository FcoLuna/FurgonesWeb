<%=render "partials/navigation"%>
<p id="notice"><%= notice %></p>
<h1>Lista de apoderados</h1>
<%if user_signed_in?%>
<div class="panel panel-primary">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Rut</th>
      <th>Telefono</th>
      <th>Pago</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.nombre %></td>
        <td><%= parent.apellido %></td>
        <td><%= parent.rut %></td>
        <td><%= parent.telefono %></td>
        <td><%= parent.pago %></td>
        <td><%= link_to 'Mostrar', parent ,class:"btn btn-primary btn-lg active btn-sm " %></td>
        <td><%= link_to 'Editar', edit_parent_path(parent), class:"btn btn-warning btn-lg active btn-sm " %></td>
        <td><%= link_to 'Eliminar', parent, method: :delete, data: { confirm: '¿Está seguro?' },class:"btn btn-danger btn-lg active btn-sm " %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @parents, renderer: BootstrapPagination::Rails %>
</div>
<body>
  <%= link_to  'Nuevo Apoderado', new_parent_path,class:"btn btn-default btn-lg active btn-sm "%>
  <%= link_to 'Atrás','welcome/index',class:"btn btn-default btn-lg active btn-sm "%>
</body>
<%else%>
<div class="panel panel-primary">
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
<th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.nombre %></td>
        <td><%= parent.apellido %></td>
        <td><%= parent.telefono %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @parents, renderer: BootstrapPagination::Rails %>
</div>
<body>
  <%= link_to 'Atrás','welcome/index',class:"btn btn-default btn-lg active"%>
</body>
<%end%>
