<p id="notice"><%= notice %></p>

<h1>Lista de Trabajadores</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Rut</th>
      <th>Tipo trabajador</th>
      <th>Sueldo</th>
      <th>Van</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.nombre %></td>
        <td><%= worker.apellido %></td>
        <td><%= worker.rut %></td>
        <td><%= worker.tipo_trabajador %></td>
        <td><%= worker.sueldo %></td>
        <td><%= worker.van %></td>
        <td><%= link_to 'Mostrar', worker %></td>
        <td><%= link_to 'Editar', edit_worker_path(worker) %></td>
        <td><%= link_to 'Eliminar', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

